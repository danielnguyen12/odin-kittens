<h1>Kitten Info</h1>
<div class="mb-3 card card-body">
  <div class="me-4">
      <li>Name: <%= @kitten.name %></li>
      <li>Age: <%= @kitten.age %></li>
      <li>Cuteness: <%= @kitten.cuteness %>/10</li>
      <li>Softness: <%= @kitten.softness %>/10</li>
      <%= link_to 'Edit', edit_kitten_path(@kitten) %>
      <%= link_to 'Delete', kitten_path(@kitten), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
  </div>
</div>